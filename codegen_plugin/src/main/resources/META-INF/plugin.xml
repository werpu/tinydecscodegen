<idea-plugin>
    <id>com.github.tinydecs-codegen.service</id>
    <name>Service Codegen for the ts-ng-tinydecs lib</name>
    <version>1.0.0-SNAPSHOT</version>
    <vendor email="werner.punz@gmail.com" url="">Werner Punz</vendor>

    <description><![CDATA[
     This is a first attempt at a tinydecs codegen
    ]]></description>

    <change-notes><![CDATA[
      This is the first pre alpha release
      of the code generator for the ts-ng-tinydecorations
      Currently only service generation is supported
      Expect more to come soom
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="123.72"/>
    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->

    <depends>com.intellij.modules.lang</depends>

    <depends optional="true">JavaScript</depends>



    <!--
    <depends optional="true" config-file="css-support.xml">com.intellij.css</depends>
    -->
    <!--
    <depends>com.intellij.modules.javascript</depends>
    -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileTemplateGroup implementation="factories.TnDecGroupFactory"/>
        <defaultLiveTemplatesProvider implementation="factories.TnDecLiveTemplatesProvider"/>
        <liveTemplateContext implementation="factories.TnDecLiveTemplatesContextProvider"/>
        <applicationConfigurable instance="configuration.ServiceGenConfiguration"/>


        <applicationService serviceInterface="configuration.ConfigSerializer"
                            serviceImplementation="configuration.ConfigSerializer"/>

        <fileBasedIndex implementation="indexes.ComponentIndex" />
        <fileBasedIndex implementation="indexes.ControllerIndex" />
        <fileBasedIndex implementation="indexes.RoutesIndex" />

    </extensions>

    <actions>
        <!-- Add your actions here -->

        <group id="TD_TinyDecsMenu" text="_Tiny Decorations" description="Tiny decorations actions">
            <add-to-group group-id="MainMenu" anchor="after" relative-to-action="ToolsMenu"/>


            <group id="TD_TinyDecsContextMenu1" text="_Tiny Decorations" popup="true"
                   description="Tiny decorations context actions" icon="/images/tt.png">

                <action id="TD_CreateModule1" class="actions.CreateTnDecModule" text="Create Module"
                        description="Create a an Angular Tiny Decorations Module" icon="/images/tt.png">
                </action>
                <separator/>

                <action id="TD_CreateComponent1" class="actions.CreateTnDecComponent" text="Create Component"
                        description="Create a an Angular Tiny Decorations Component" icon="/images/tt.png">
                </action>
                <action id="TD_CreateController1" class="actions.CreateTnDecController" text="Create Controller"
                        description="Create a an Angular Tiny Decorations Controller" icon="/images/tt.png">
                </action>
                <action id="TD_CreateService1" class="actions.CreateTnDecService" text="Create Service"
                        description="Create a an Angular Tiny Decorations Service" icon="/images/tt.png">
                </action>
                <action id="TD_CreateFilter1" class="actions.CreateTnDecFilter" text="Create Filter"
                        description="Create a an Angular Tiny Decorations Filter" icon="/images/tt.png">
                </action>

                <action id="TD_CreateDirective1" class="actions.CreateTnDecDirective" text="Create Directive"
                        description="Create a an Angular Tiny Decorations Directive" icon="/images/tt.png">
                </action>


                <separator/>
                <action id="TD_CreateConfig1" class="actions.CreateTnDecConfig" text="Create Startup Config"
                        description="Create a an Angular Tiny Decorations Startup Config" icon="/images/tt.png">
                </action>
                <action id="TD_CreateRun1" class="actions.CreateTnDecRun" text="Create Run Config"
                        description="Create a an Angular Tiny Decorations Run Config" icon="/images/tt.png">
                </action>
            </group>

            <group id="Angular_2_Plus" text="_Angular NG" popup="true" description="Actions for Angular NG">


                <action id="NG_CreateModule1" class="actions_ng.CreateNgModule" text="Create Angular Ng Module"
                        description="Create a an Angular NG Module">
                </action>

                <separator/>


                <action id="NG_CreateService1" class="actions_ng.CreateNgService" text="Create Angular Ng Service"
                        description="Create a an Angular NG Service">
                </action>

                <action id="NG_CreateComponent1" class="actions_ng.CreateNgComponent" text="Create Angular Ng Component"
                        description="Create a an Angular NG Component">
                </action>

                <action id="NG_CreateRoute1" class="actions_ng.CreateNgRoute" text="Create UI-Routes Route"
                        description="Create a new Route">
                </action>

                <action id="NG_CreatePipe1" class="actions_ng.CreateNgPipe" text="Create Angular Ng Pipe"
                        description="Create a an Angular NG Pipe">
                </action>

                <action id="NG_CreateDirective" class="actions_ng.CreateNgDirective" text="Create Angular Ng Directive"
                        description="Create a an Angular NG Directive">
                </action>
            </group>


            <group id="TD_Generate" text="Generators" description="Tiny decorations generation" popup="true">


                <action id="TD_DtoSrc" class="actions.DtoGenerateFromSource" text="Dto Generation from source"
                        description="Generate a typescript dto from the current editor window">
                    <keyboard-shortcut first-keystroke="control alt T" second-keystroke="N" keymap="$default"/>
                </action>

                <separator/>

                <action id="TD_ServiceSource" class="actions.ServiceGenerateActionFromSource"
                        text="Service Generation from Source"
                        description="Generate a typescript service">

                </action>


                <separator/>
                <action id="NG_ServiceSource" class="actions_ng.ServiceGenerateActionFromSource"
                        text="Angular NG Service Generation from Source"
                        description="Generate a Angular Ng typescript service">
                </action>

                <separator/>
                <action id="NGRestEndpoint" class="actions.CreateRestEndpoint"
                        text="Create a Rest Endpoint"
                        description="Create a Rest Endpoint">

                </action>

            </group>

            <separator/>
            <action id="TD_GoToTypescript" class="actions.GoToTs" text="Go To Typescript"
                    icon="/images/tt.png"></action>
            <action id="TD_GoToJava" class="actions.GoToJava" text="Go To Java" icon="/images/tt.png"></action>
            <action id="TD_TD_EditTemplate" class="actions.EditTemplate" text="Edit HTML Template"></action>


        </group>

        <!-- File Menu -->
        <group id="TD_TinyDecsContextMenu" text="_Tiny Decorations" popup="true"
               description="Tiny decorations context actions" icon="/images/tt.png">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
            <action id="TD_CreateProject" class="actions.CreateTnDecProject" text="Create Tiny Decorations Project"
                    description="Create a an Angular Tiny Decorations Project" icon="/images/tt.png">
            </action>

            <separator/>

            <action id="TD_CreateComponent" class="actions.CreateTnDecComponent" text="Create Component"
                    description="Create a an Angular Tiny Decorations Component" icon="/images/tt.png">
            </action>
            <action id="TD_CreateController" class="actions.CreateTnDecController" text="Create Controller"
                    description="Create a an Angular Tiny Decorations Controller" icon="/images/tt.png">
            </action>

          

            <action id="TD_CreateService" class="actions.CreateTnDecService" text="Create Service"
                    description="Create a an Angular Tiny Decorations Service" icon="/images/tt.png">
            </action>
            <action id="TD_CreateFilter" class="actions.CreateTnDecFilter" text="Create Filter"
                    description="Create a an Angular Tiny Decorations Filter" icon="/images/tt.png">
            </action>

            <action id="TD_CreateDirective" class="actions.CreateTnDecDirective" text="Create Directive"
                    description="Create a an Angular Tiny Decorations Directive" icon="/images/tt.png">
            </action>

            <separator/>
            <action id="TD_CreateModule" class="actions.CreateTnDecModule" text="Create Module"
                    description="Create a an Angular Tiny Decorations Module" icon="/images/tt.png">
            </action>

            <separator/>
            <action id="TD_CreateConfig" class="actions.CreateTnDecConfig" text="Create Startup Config"
                    description="Create a an Angular Tiny Decorations Startup Config" icon="/images/tt.png">
            </action>
            <action id="TD_CreateRun" class="actions.CreateTnDecRun" text="Create Run Config"
                    description="Create a an Angular Tiny Decorations Run Config" icon="/images/tt.png">
            </action>
        </group>

        <group id="NG_TinyDecsContextMenu" text="_Angular NG" popup="true" description="Angular NG Actions"
               icon="/images/tt.png">

            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
            <action id="NG_CreateProject2" class="actions_ng.CreateNgProject" text="Create Angular Ng Project"
                    description="Create a an Angular Ng Project" icon="/images/tt.png">
            </action>

            <separator/>

            <action id="TD_CreateModule2" class="actions_ng.CreateNgModule" text="Create Module"
                    description="Create a an Angular Angular NG Module">
            </action>

            <separator/>

            <action id="NG_CreateComponent2" class="actions_ng.CreateNgComponent" text="Create Component"
                    description="Create a an Angular NG Component">
            </action>


            <action id="NG_CreateRoute2" class="actions_ng.CreateNgRoute" text="Create UI-Routes Route"
                    description="Create a new Route">
            </action>

            <action id="NG_CreateService2" class="actions_ng.CreateNgService" text="Create Service"
                    description="Create a an Angular NG Service">
            </action>

            <action id="NG_CreatePipe2" class="actions_ng.CreateNgPipe" text="Create Pipe"
                    description="Create a an Angular NG Pipe">
            </action>
            <action id="NG_CreateDirective2" class="actions_ng.CreateNgDirective" text="Create Directive"
                    description="Create a an Angular NG Directive">
            </action>



        </group>

        <group id="TNNG_Create_Rest" text="_Create Rest" popup="true" description="Creation Actions"
               icon="/images/tt.png">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>

            <action id="NG_SprinRest2" class="actions.CreateSpringRestController"
                    text="Generate a Spring Rest Controller"
                    description="Generate a Spring Rest Controller">
            </action>
        </group>

        <!-- editor -->
        <group>
            <action id="TTNG_CreateRestEndpoint3" class="actions.CreateRestEndpoint" text="Create Rest Endpoint"
                    description="Create Rest Endpoint" icon="/images/tt.png">
                <keyboard-shortcut first-keystroke="control alt T" second-keystroke="R" keymap="$default"/>
            </action>
            <action id="TD_DtoSrc3" class="actions.DtoGenerateFromSource" text="Dto Generation from source"
                    description="Generate a typescript dto from the current editor window" icon="/images/tt.png">
            </action>
            <separator/>

            <action id="TD_GoToTypescript3" class="actions.GoToTs" text="Go To Typescript"
                    icon="/images/tt.png">
                <keyboard-shortcut first-keystroke="control alt T" second-keystroke="G" keymap="$default"/>
            </action>
            <action id="TD_GoToJava3" class="actions.GoToJava" text="Go To Java" icon="/images/tt.png">
                <keyboard-shortcut first-keystroke="control alt T" second-keystroke="G" keymap="$default"/>
            </action>
            <action id="TD_TD_EditTemplate3" class="actions.EditTemplate" text="Edit HTML Template"
                    icon="/images/tt.png">
                <keyboard-shortcut first-keystroke="control alt T" second-keystroke="H" keymap="$default"/>
            </action>
            <separator/>
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </group>



    </actions>
    <application-components>

        <component>
            <implementation-class>components.Application</implementation-class>
        </component>
    </application-components>
</idea-plugin>