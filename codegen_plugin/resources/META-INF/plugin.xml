<idea-plugin>
    <id>com.github.tinydecs-codegen.service</id>
    <name>Service Codegen for the ts-ng-tinydecs lib</name>
    <version>0.0.1</version>
    <vendor email="werner.punz@gmail.com" url="">Werner Punz</vendor>

    <description><![CDATA[
     This is a first attempt at a tinydecs codegen
    ]]></description>

    <change-notes><![CDATA[
      This is the first pre alpha release
      of the code generator for the ts-ng-tinydecorations
      Currently only service generation is supported
      Expect more to come soom
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->

        <group id="TinyDecsMenu" text="_Tiny Decorations" description="Tiny decorations actions">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Service" class="ServiceGenerateActionWithoutCompile" text="Service Generation"
                    description="Generate a typescript service">
                <keyboard-shortcut keymap="$default" first-keystroke="alt meta f1"/>
            </action>
            <action id="CompileService" class="ServiceGenerationAction" text="Compilation and Service Generation"
                    description="Generate a typescript service">
                <keyboard-shortcut keymap="$default" first-keystroke="alt meta f2"/>
            </action>

            <action id="Dto" class="DtoGenerateWithoutCompile" text="Dto Generation"
                    description="Generate a typescript dto">
                <keyboard-shortcut keymap="$default" first-keystroke="alt meta f3"/>
            </action>

            <action id="DtoCompile" class="DtoGeneration" text="Compilation and Dto Generation"
                    description="Generate a typescript dto">
                <keyboard-shortcut keymap="$default" first-keystroke="alt meta f4"/>
            </action>
        </group>

    </actions>
</idea-plugin>