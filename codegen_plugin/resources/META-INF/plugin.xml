<idea-plugin>
    <id>com.github.tinydecs-codegen.service</id>
    <name>Service Codegen for the ts-ng-tinydecs lib</name>
    <version>0.0.1</version>
    <vendor email="werner.punz@gmail.com" url="">Werner Punz</vendor>

    <description><![CDATA[
     This is a first attempt at a tinydecs codegen
    ]]></description>

    <change-notes><![CDATA[
      This is the first pre alpha release
      of the code generator for the ts-ng-tinydecorations
      Currently only service generation is supported
      Expect more to come soom
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileTemplateGroup implementation="factories.TnDecGroupFactory"/>
        <defaultLiveTemplatesProvider implementation="factories.TnDecLiveTemplatesProvider"/>
        <liveTemplateContext implementation="factories.TnDecLiveTemplatesContextProvider"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->

        <group id="TinyDecsMenu" text="_Tiny Decorations" description="Tiny decorations actions">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Service" class="actions.ServiceGenerateActionWithoutCompile" text="Service Generation"
                    description="Generate a typescript service">
                <keyboard-shortcut keymap="$default" first-keystroke="alt meta f1"/>
            </action>
            <action id="CompileService" class="actions.ServiceGenerationAction" text="Compilation and Service Generation"
                    description="Generate a typescript service">
                <keyboard-shortcut keymap="$default" first-keystroke="alt meta f2"/>
            </action>

            <action id="Dto" class="actions.DtoGenerateWithoutCompile" text="Dto Generation"
                    description="Generate a typescript dto">
                <keyboard-shortcut keymap="$default" first-keystroke="alt meta f3"/>
            </action>

            <action id="DtoCompile" class="actions.DtoGeneration" text="Compilation and Dto Generation"
                    description="Generate a typescript dto">
                <keyboard-shortcut keymap="$default" first-keystroke="alt meta f4"/>
            </action>


        </group>

        <group id="TinyDecsContextMenu" text="_Tiny Decorations" popup="true" description="Tiny decorations context actions" icon="/images/tt.png">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewXml"/>
            <action id="CreateComponent" class="actions.CreateTnDecComponent" text="Create Component"
                    description="Create a an Angular Tiny Decorations Component" icon="/images/tt.png">
            </action>
            <action id="CreateController" class="actions.CreateTnDecController" text="Create Controller"
                    description="Create a an Angular Tiny Decorations Controller" icon="/images/tt.png">
            </action>
            <action id="CreateService" class="actions.CreateTnDecService" text="Create Service"
                    description="Create a an Angular Tiny Decorations Service" icon="/images/tt.png">
            </action>
            <action id="CreateFilter" class="actions.CreateTnDecFilter" text="Create Filter"
                    description="Create a an Angular Tiny Decorations Filter" icon="/images/tt.png">
            </action>
        </group>
    </actions>
    <application-components>

        <component>
            <implementation-class>components.Application</implementation-class>
        </component>
    </application-components>
</idea-plugin>